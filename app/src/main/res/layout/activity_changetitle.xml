<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.nguyenphucuong.exercise_week2.ChangeTitleActivity">

    <View
        android:id="@+id/vSample"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/pink"
        />

    <EditText
        android:id="@+id/edtChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/vSample"
        android:layout_toStartOf="@id/vSample"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/edtChange">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <ImageView
                android:id="@+id/ivPink"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/pink"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/ivPurple"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/purple"
                android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/ivIndigo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/indigo"
                android:contentDescription="@string/todo"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <ImageView
                android:id="@+id/ivBlue"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/ivTeal"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/teal"
                android:contentDescription="@string/todo"/>

            <ImageView
                android:id="@+id/ivGreen"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/green"
                android:contentDescription="@string/todo"/>

        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:layout_below="@id/tableLayout"
        android:text="@string/save"
        android:layout_marginTop="16dp"/>


</RelativeLayout>
